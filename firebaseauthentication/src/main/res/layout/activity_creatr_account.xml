<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLogin"
    tools:context="com.edgon.firebaseauthentication.login.create_account.view.CreateAccountActivity">

    <include layout="@layout/toobar"/>

    <EditText
        android:id="@+id/edt_email_create_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="correo@email.com"
        android:inputType="textEmailAddress"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="196dp"
        app:layout_constraintHorizontal_bias="0.6" />

    <EditText
        android:id="@+id/edt_password_create_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginRight="32dp"
        android:hint="Constraseña"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_email_create_account" />

    <EditText
        android:id="@+id/edt_confirm_password_create_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:hint="Confirmar Contraseña"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        app:layout_constraintTop_toBottomOf="@+id/edt_password_create_account"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintVertical_bias="0.077"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btn_create_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:text=" Crear Cuenta"
        android:textColor="@color/colorText"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_confirm_password_create_account"
        app:layout_constraintVertical_bias="0.182" />

</android.support.constraint.ConstraintLayout>
